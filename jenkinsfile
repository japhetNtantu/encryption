pipeline 
{

    agent any 
    stages {
        stage('MunitTest Application') { 
        steps {
            bat 'mvn clean test'
                // 
            } 
        }
        stage('Build Application') { 
            steps {
            bat 'mvn clean install'
                // 
            }
        }
        stage('Deploying application To Mulesoft cloudhub') { 
            steps {
            bat 'mvn clean deploy -DmuleDeploy -DskipTests -Dmule.version=4.4.0 -Danypoint.username=japhetntantu5 -Danypoint.password=Ntantukava150819 -Denv=Sandbox -Dappname=Encrypt -Dbusiness=Cap4Lab -DvCore=Micro -Dworkers=1'
                // 
            } 
       
        }
    }
}